{
  "compilerOptions": {
    // "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    // "jsx": "preserve",
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "pages/components/AuctionGridTitleSection.tsx",
    "pages/auth/login.js",
    "pages/auth/login-with-code.js",
    "pages/auth/login-without-code.js",
    "pages/auth/passwordless-login.js",
    "pages/api/auth/[...nextauth].js",
    "components/onboardingForm/PersonalDetails.js",
    "components/onboardingForm/ContactDetails.js",
    "components/onboardingForm/ProfessionalDetails.js",
    "components/onboardingForm/EducationalDetails.js",
    "components/onboardingForm/FoodSafetyQuestionnaire.js",
    "components/onboardingForm/HealthAndDisability.js",
    "components/onboardingForm/BankDetails.js",
    "components/onboardingForm/AgreementConsent.js",
    "pages/redirect/index.js",
    "components/onboardingForm/Reference.js",
    "pages/onboarding/index.js",
    "components/DashboardLayout.js",
    "components/FontAwesomeIcons.js",
    "context/SessionContext.js",
    "pages/admin/analytics.js",
    "pages/admin/create.js",
    "pages/admin/index.js",
    "pages/admin/view.js",
    "hooks/Store/useOnboardingStore.js",
    "hooks/Store/useDashboardStore.js",
    "pages/admin/list-admin/[id].js",
    "pages/admin/list-admin/index.js",
    "pages/admin/list-applicants/[id].js",
    "pages/admin/list-applicants/index.js",
    "pages/onboarding/OnboardingStepContent.js",
    "pages/index.js",
    "pages/dashboard/index.js",
    "pages/_app.js",
    "components/Content.js",
    "components/ThemeToggle.js",
    "components/TopNav.js",
    "components/SideNav.js",
    "components/OnboardingAsideLeft.js",
    "components/OnboardingTopNav.js",
    "context/ThemeContext.js",
    "components/Logo.js",
    "pages/auth/error.js",
    "components/onboardingForm/ValidationComponent.js",
    "pages/auth/reset-password.js",
    "pages/auth/verify-email.js",
    "pages/auth/verify-twofactor.js",
    "pages/auth/notify-me.js",
    "pages/auth/forgot-password.js",
    "components/dashboard/UserTable.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
